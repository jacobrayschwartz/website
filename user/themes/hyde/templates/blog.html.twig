{% extends 'partials/base.html.twig' %}
{% block content %}
<div class="page blog-listing">
  <h1 class="page-title">{{ page.title }}</h1>
  {% if page.taxonomy.tag %}
    <section><strong>Tags:</strong> 
      {{page.taxonomy.tag|map((tag) => "<a href='/blog-search?tag=#{tag}'>#{tag}</a>")|join(', ')}}</section>
  {% endif %}
  {{ page.content }}
  <div class="posts">
  	{% for post in page.collection %}
      {% include 'partials/blog/summary-item.html.twig' with {post: post} %}
      <hr/>
  	{% endfor %}
  </div>
</div>
{% endblock %}
